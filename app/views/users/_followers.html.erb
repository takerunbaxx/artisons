
<div class="my-3 p-3 bg-white rounded shadow-sm">
    <% @followers.each do |follower|%>
    <div class="media text-muted pt-3">
       <%=render "image", user: follower%> 
      <section class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%=link_to follower.name, follower %></strong> 
       <p style="padding-left: 15px;"><%=follower.bio%></p>
      </section>
    </div>
    <%=paginate @followers%>
 <%end%>
 </div>

