
<%if current_user.liking?(post)%>
  <%= link_to like_path(post_id: post.id, id: post.id), method: :delete, remote: true do %>
  <i class="fas fa-thumbs-up fa-lg"></i>  unlike
  <% end %>
<% else %>
  <%= link_to likes_path(post_id: post.id), method: :post, remote: true do%>
  <i class="fas fa-thumbs-up fa-lg"></i>  like
  <% end %>
<% end %>

